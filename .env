# Tamanho da imagem que o Google vai devolver
TILE_SIZE=640x640
# Scale 2 melhora a nitidez em telas retina (dobra pixels internos)
TILE_SCALE=2
# Número de threads simultâneas (Cuidado com rate limit do Google)
MAX_WORKERS=4

# --- GEOPROCESSAMENTO ---
